{
  "manifest_version": 3,
  "name": "AI Page Summarizer (Gemini)",
  "version": "1.0.0",
  "description": "Summarize the current page into bullet points and a main takeaway using Gemini.",
  "permissions": ["scripting", "activeTab", "contextMenus", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Summarize page",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "128": "icons/128.png"
  }
}
